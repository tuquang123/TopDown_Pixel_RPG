.skill-container {
    width: 300px;
    padding: 10px;
    background-color: rgb(34, 34, 34);
    border-radius: 10px;
}

.title {
    font-size: 20px;
    color: white;
    text-align: center;
    margin-bottom: 10px;
    align-items: auto;
}

.skill-slots {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.skill-slot {
    width: 50px;
    height: 50px;
    background-color: rgb(68, 68, 68);
    color: white;
    border-radius: 5px;
    font-size: 18px;
}
